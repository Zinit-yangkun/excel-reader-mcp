{
  "name": "@archimdescrypto/excel-reader-mcp",
  "version": "1.0.0",
  "description": "MCP server for reading Excel files with automatic chunking and pagination support",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "start": "node build/index.js",
    "example": "npx tsx ./examples/basic-usage.ts"
  },
  "bin": {
    "excel-reader": "./build/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArchimdesCrypto/excel-reader-mcp.git"
  },
  "keywords": [
    "excel",
    "xlsx",
    "mcp",
    "sheetjs",
    "pagination",
    "chunking",
    "model-context-protocol"
  ],
  "author": "ArchimdesCrypto",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ArchimdesCrypto/excel-reader-mcp/issues"
  },
  "homepage": "https://github.com/ArchimdesCrypto/excel-reader-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.26.0",
    "jszip": "3.10.1",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.1/xlsx-0.20.1.tgz"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  }
}
